<link rel="stylesheet" href="/css/home.css">
<h1>
    Home / <%= title %>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user) { %>
        <form action="/posts/create-post" method="POST" id="new-post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Type here..." required></textarea>
            <button>Post</button>
        </form>
        <% } %>

            <div id="post-list">
                <ul>
                    <% for(post of posts) { %>

                        <li>
                            <p>
                                <% if(locals.user && locals.user.id === post.user.id) { %>
                                    <small>
                                        <a href="/posts/destroy/<%= post.id %>">X</a>
                                    </small>
                                <% } %> 
                                <%= post.content %>
                                    <br>
                                    <small>
                                        <%= post.user.name %>
                                    </small>
                            </p>

                            <div class="add-comment-list">
                                <% if(locals.user) { %>

                                    <form action="/comments/add-comment" method="POST">
                                        <input type="text" name="comment" placeholder="Type here to add comment" required>
                                        <input type="hidden" name="post" value=<%= post._id %>>
                                        <button>Add a comment</button> 
                                    </form>

                                    <% } %>
                            </div>
                            <div class="dispaly-comment-list">
                                <ul>
                                    <% for(comment of post.comments) { %>
                                        <li>
                                            <p>
                                                <% if(locals.user && locals.user.id === comment.user.id) { %>
                                                    <small>
                                                        <a href="/comments/destroy/<%= comment.id %>">X</a>
                                                    </small>
                                                <% } %> 
                                                <%= comment.content %>
                                                    <br>
                                                    <small>
                                                        <%= comment.user.name %>
                                                    </small>
                                            </p>
                                        </li>
                                     <% } %>   
                                </ul>
                            </div>
                        </li>

                        <% } %>
                </ul>
            </div>
</section>