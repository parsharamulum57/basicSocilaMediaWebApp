<link rel="stylesheet" href="/css/home.css">
<h1>
    Home / <%= title %>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user) { %>
        <form action="/posts/create-post" method="POST" id="new-post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Type here..." required></textarea>
            <button>Post</button>
        </form>
        <% } %>

            <div id="post-list">
                <ul>
                    <% for(post of posts) { %>

                        <%- include("_post") -%>

                        <% } %>
                </ul>
            </div>
</section>